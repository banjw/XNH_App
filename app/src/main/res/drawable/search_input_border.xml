<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--下层画布，红色-->
    <item>
        <shape>
            <!--<solid android:color="#C6C3B3" />-->
            <solid android:color="#EEEBBE" />
        </shape>
    </item>
    <!--下层画布，白色，向下移2dp-->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        >
        <shape>
            <solid android:color="@color/menu_text_color" />
            <corners android:radius="40dp" />
        </shape>
    </item>
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        >
        <shape>
            <solid android:color="#FFF" />
            <corners android:radius="40dp" />
        </shape>
    </item>
</layer-list>