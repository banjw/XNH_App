<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_linear_layout_height"
        android:orientation="horizontal"
        android:background="@color/background"
        >
        <LinearLayout
            android:id="@+id/payment"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/img_layout_height"
                android:src="@drawable/payment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_dp"
                android:gravity="center"
                android:text="@string/bottom_payment"
                android:textColor="@color/bottom_text_color"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/person_change"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/img_layout_height"
                android:src="@drawable/person_change"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_dp"
                android:gravity="center"
                android:text="@string/bottom_person_change"
                android:textColor="@color/bottom_text_color"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/payment_change"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/img_layout_height"
                android:src="@drawable/payment_change"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_dp"
                android:gravity="center"
                android:text="@string/bottom_payment_change"
                android:textColor="@color/bottom_text_color"
                />
        </LinearLayout>
    </LinearLayout>